active_admin_form_for resource do |f|
  f.inputs do
    f.input :name, label: 'Наименование'
    f.has_many :product_attrs do |ff|
      ff.input :size_id, as: :select, collection: Size.pluck(:value, :id), label: 'Размер'
      ff.input :price, label: 'Цена'
      ff.input :amount, label: 'Количество'
    end
  end
  actions
end
